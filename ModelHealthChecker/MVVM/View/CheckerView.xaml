<Window x:Class="ModelHealthChecker.MVVM.View.CheckerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModelHealthChecker.MVVM.View"
          xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
                      Title="Project Checker" Height="900" Width="600" ResizeMode="CanMinimize" Topmost="True">
    <ScrollViewer Padding="20">
        <Border>
            <StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="File Size: " FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding FileSize}" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text=" MB" FontSize="14" VerticalAlignment="Center"/>
                    <Image Source="/FirstOptionRCD;component/Resources/logo.png" Width="120"  Margin="100 0 0 0"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Warnings: " FontSize="13" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding NumOfWarnings}" FontSize="13" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="View Warnings" Margin="0 5 0 0" Width="110" Command="{Binding WarningBtn}" HorizontalAlignment="Left"/>

                <Border Margin="0 20 0 0" Background="Silver" Height="420" CornerRadius="13" Padding="30 10 30 10">
                    <StackPanel>
                        <TextBlock Text="Loaded Families (MB): " FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <DataGrid Height="335" Margin="0 7 0 0"  ItemsSource="{Binding LoadedFamilies}" IsReadOnly="True" Name ="FamilyDG"
                                  SelectionChanged="FamilyDG_SelectionChanged"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Family" Binding="{Binding family.Name}" Width="4*">

                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Is Used" Binding="{Binding IsUsed}" Width="1*">

                                </DataGridTextColumn>


                            </DataGrid.Columns>


                        </DataGrid>

                        <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                            <Button Content="Isolate Family's Elements" Command="{Binding ShowElementsBTN}" Width="150"/>
                            <Button Content="Delete Family" Width="100" Margin="10 0 0 0" Command="{Binding DeleterBTN}"/>
                        </StackPanel>

                    </StackPanel>
                </Border>


                <Border Margin="0 20 0 0" Padding="10" Height="280" Background="Silver" CornerRadius="13" >
                    <StackPanel>
                        <TextBlock Text="Imported Links: " FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>

                        <lvc:CartesianChart Height="160" Margin="0 40 0 0" Series="{Binding ColumnSelectionSeries}" 
                                          Foreground="Black" LegendLocation="Right" >
                            <lvc:CartesianChart.AxisX >
                                <lvc:Axis Title="Type of links" Labels=".  "  Foreground="Black"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Number of links"  Foreground="Black" ></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>

                        <Button Content="Manage Links" Width="180" Margin="0 10 0 0" Command="{Binding LinksBTN}"/>
                    </StackPanel>

                </Border>

                <Border Margin="0 20 0 0" Padding="30 10 30 10" Height="430" Background="Silver" CornerRadius="13" >
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Duplicates : " FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding NumOfDuplicate}" FontSize="14"  VerticalAlignment="Center"/>
                        </StackPanel >

                        <ListBox Height="300"  Margin="0 15 0 15" SelectedItem="{Binding SelectedDuplication}"
                                 ItemsSource="{Binding Duplications}"  SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsSelected}" Margin="0 0 10 0"/>
                                        <TextBlock Text="{Binding Element_1_Dis}"  Margin="0 0 10 0"/>
                                        <TextBlock Text=">>>"  Margin="0 0 10 0"/>
                                        <TextBlock Text="{Binding Element_2_Dis}" Margin="0 0 10 0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                        </ListBox>
                        <!--<DataGrid Margin="0 15 0 15" ItemsSource="{Binding Duplications}"  SelectionMode="Single"
                                  
                                    CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" 
                                  AutoGenerateColumns="False" Height="300" CanUserReorderColumns="False" CanUserResizeRows="False">

                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn  Binding="{Binding IsSelected}" Width="0.5*" IsReadOnly="False">


                                </DataGridCheckBoxColumn>
                                <DataGridTextColumn Header="Element 1" Binding="{Binding Element_1_Dis}" Width="4*"  IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Element 2" Binding="{Binding Element_2_Dis}" Width="4*"  IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>

                        </DataGrid>-->
                        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center">
                            <CheckBox Content="Select all" Margin="0 9 20 0" IsChecked="{Binding SelectAll}"/>
                            <Button Content="Show Duplicated Elements"  Margin="0 0 20 0" Width="180" Command="{Binding ShowDuplicatedElementsBTN}" />
                            <Button Content="Delete Selected Duplications" Margin="0 0 20 0"  Command="{Binding DeleteDupElementsBTN}" Width="180"/>

                        </StackPanel>


                    </StackPanel>

                </Border>

            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>


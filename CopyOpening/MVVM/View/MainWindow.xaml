<Window x:Class="CopyOpening.MVVM.View.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CopyOpening.MVVM.View"
             mc:Ignorable="d" 
             Height="150" Width="400"
             ResizeMode="NoResize"
             Background="#FFE6E6E6" >
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border" BorderBrush="Black" BorderThickness="1" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightGreen"/>
                                <Setter TargetName="Border" Property="BorderBrush">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#FFFF522F" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
       
    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label>Revit Links</Label>
            <ComboBox ItemsSource="{Binding RevitLinkInstances}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedLink ,Mode=TwoWay}" SelectedIndex="0" ></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="ExportBtn" Content="Copy Opening" Background="#FF502323" Width="90"  Style="{StaticResource ButtonStyle}" Command="{Binding CopyOpeningCommand}" BorderBrush="#FFFFAAAA" ></Button>
            <Button x:Name="CloseBtn" Content="CLOSE" Style="{StaticResource ButtonStyle}" Width="90"  Margin="5,0,0,0" Click="CloseBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
    

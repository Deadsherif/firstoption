<Window x:Class="AuthService.MVVM.View.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthService.MVVM.View"
        mc:Ignorable="d"
        Title="Authentication" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status - Top Corner -->
        <TextBlock Grid.Row="3" 
                   Text="{Binding Status}" 
                   Foreground="{Binding StatusForeground}"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top"
                   Margin="0,0,0,20"
                   FontSize="12"/>

        <!-- Code Input Section -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="0,20,0,20">
            <Label Content="Enter Code:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" 
                     Padding="5"
                     Height="30"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Check" 
                    Command="{Binding SubmitCommand}"
                    Height="30" 
                    Width="80"
                    Margin="0,0,10,0"
                    FontSize="12"
                    IsDefault="True"/>
            <Button Content="OK" 
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Height="30" 
                    Width="80"
                    FontSize="12"/>
        </StackPanel>

        <!-- Server Response -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding ServerResponse}" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"
                   FontSize="12"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</Window>


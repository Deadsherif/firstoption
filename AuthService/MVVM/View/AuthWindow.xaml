<Window x:Class="AuthService.MVVM.View.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthService.MVVM.View"
        mc:Ignorable="d"
        Title="First Option - Authentication" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Color Palette -->
        <Color x:Key="PrimaryBlackColor">#121212</Color>
        <Color x:Key="SecondaryBlackColor">#1E1E1E</Color>
        <Color x:Key="GoldAccentColor">#D4AF37</Color>
        <Color x:Key="TextWhiteColor">#E0E0E0</Color>
        <Color x:Key="TextGrayColor">#9E9E9E</Color>

        <SolidColorBrush x:Key="PrimaryBlackBrush" Color="{StaticResource PrimaryBlackColor}"/>
        <SolidColorBrush x:Key="SecondaryBlackBrush" Color="{StaticResource SecondaryBlackColor}"/>
        <SolidColorBrush x:Key="GoldAccentBrush" Color="{StaticResource GoldAccentColor}"/>
        <SolidColorBrush x:Key="TextWhiteBrush" Color="{StaticResource TextWhiteColor}"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="{StaticResource TextGrayColor}"/>

        <!-- Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GoldAccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlackBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#444444"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource GoldAccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GoldAccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22D4AF37"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource GoldAccentBrush}"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldAccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBlackBrush}" 
            CornerRadius="15" 
            BorderBrush="#333333" 
            BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Input Label -->
                <RowDefinition Height="Auto"/>
                <!-- Input Field -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
                <RowDefinition Height="*"/>
                <!-- Status Info -->
                <RowDefinition Height="Auto"/>
                <!-- Footer/Response -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="FIRST OPTION" 
                           Foreground="{StaticResource GoldAccentBrush}" 
                           FontSize="24" 
                           FontWeight="Bold"/>
                <TextBlock Text="ENGINEERING SERVICES" 
                           Foreground="{StaticResource TextGrayBrush}" 
                           FontSize="10" 
                           Margin="2,-5,0,0"/>
            </StackPanel>

            <!-- Input Section -->
            <TextBlock Grid.Row="1" 
                       Text="License Activation" 
                       Foreground="{StaticResource TextWhiteBrush}" 
                       FontSize="16" 
                       Margin="0,0,0,10"/>

            <TextBox Grid.Row="2" 
                     Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource ModernTextBoxStyle}"
                     Tag="Enter your license code here..."
                     Margin="0,0,0,20"/>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,30">
                <Button Content="Check" 
                        Command="{Binding SubmitCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Width="120"
                        Margin="0,0,15,0"
                        IsDefault="True"/>

                <Button Content="{Binding CloseButtonText}" 
                        Command="{Binding CloseCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="120"/>
            </StackPanel>

            <!-- Status Information Card -->
            <Border Grid.Row="4" 
                    Background="{StaticResource SecondaryBlackBrush}" 
                    CornerRadius="10" 
                    Padding="20"
                    VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="Subscription Details" 
                               Foreground="{StaticResource TextGrayBrush}" 
                               FontSize="12" 
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Current Status" Foreground="{StaticResource TextGrayBrush}" FontSize="11"/>
                            <TextBlock Text="{Binding Status}" 
                                       Foreground="{Binding StatusForeground}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Margin="0,2,0,10"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="Expiry Date" Foreground="{StaticResource TextGrayBrush}" FontSize="11"/>
                            <TextBlock Text="{Binding EndDate, StringFormat={}{0:yyyy/MM/dd}}" 
                                       Foreground="{StaticResource TextWhiteBrush}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Visual Indicator Icon (Simplified) -->
                        <Border Grid.Column="1" 
                                Width="40" Height="40" 
                                CornerRadius="20" 
                                Background="#15FFFFFF"
                                VerticalAlignment="Top">
                            <Ellipse Width="12" Height="12" Fill="{Binding StatusForeground}"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Server Response / Loading -->
            <StackPanel Grid.Row="5" Margin="0,20,0,0">
                <ProgressBar IsIndeterminate="True" 
                             Height="2" 
                             Background="Transparent" 
                             BorderThickness="0"
                             Foreground="{StaticResource GoldAccentBrush}"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock Text="{Binding ServerResponse}" 
                           Foreground="{StaticResource GoldAccentBrush}" 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

<Window x:Class="ClashesViewsCreator.MVVM.View.FilterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClashesViewsCreator.MVVM.View"
        mc:Ignorable="d"
               Title="FilterView" Height="450" Width="300" Topmost="True">
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <ListBox Name="listBox" ItemsSource="{Binding ClashedIds}" SelectionMode="Extended" SelectionChanged="ListBox_SelectionChanged" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Element ["/>
                            <TextBlock Text="{Binding Number}"/>
                            <TextBlock Text="] -- ("/>
                            <TextBlock Text="{Binding NumOfDuplication}"/>
                            <TextBlock Text=")"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="1">
                <Button Content="Create" Width="100" Margin="0 20 0 10"  Command="{Binding createFilterBTN}"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Content="Export to Excel" Width="100" Command="{Binding saveToExcelBTN}"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>

            </StackPanel>

        </Grid>

    </Border>
</Window>


<Window x:Class="Insulation.MVVM.View.UIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Insulation.MVVM.View"
        mc:Ignorable="d" Title="Create Insulation" d:DesignHeight="485" Width="325"  >
    <Grid>
        <StackPanel>
            <Grid>
                <ProgressBar Name="progressBar"  VerticalAlignment="Center" Width="460" Height="5" Value="60" Foreground="Red"  Visibility="Hidden"/>
            </Grid>
            <Grid>
                <Image x:Name="logoImage" HorizontalAlignment="Left"   Width="150"  Source="/Insulation;component/Images/Logo.png"  Margin="2,-11,0,-16" />
            </Grid>
            <GroupBox Header="Pick One Method" Width="280" Height="90" Foreground="#FF6B7373" FontSize="14" BorderBrush="Black"  BorderThickness="2"  HorizontalAlignment="Center" >
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton  Content="By Level" Margin="0,0,20,0" Checked="RadioButton_Checked"/>
                        <RadioButton   Content="By Face" Margin="0,0,20,0" Checked="RadioButton_Checked_1"/>
                        <RadioButton  Content="By selection" Margin="0,0,20,0" Checked="RadioButton_Checked_2"/>
                    </StackPanel>
                    <Label Height="26" Content="Please pick the way you  want "  HorizontalAlignment="Center" FontWeight="Bold" FontSize="11"/>
                    <Label Height="30" Content="To insulate any element " Margin="0,-5,0,0"  HorizontalAlignment="Center" FontWeight="Bold" FontSize="11"/>

                </StackPanel>
            </GroupBox>

            <Grid Height="230"   Width="290" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition ></ColumnDefinition>
                    <ColumnDefinition Width="2*" ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="42"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="Category type" Grid.Row="1" FontSize="11" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Height="30" Width="110" Foreground="#FF6B7373" Grid.ColumnSpan="2"/>
                <ComboBox Name="catcombo" Grid.Column="1" Grid.Row="1" Height="20" DisplayMemberPath="Name" SelectedValuePath="Id" Width="170" />
                <Label Content="Material"  Grid.Row="2" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,0,2" Height="30" Width="90" Foreground="#FF6B7373"/>
                <ComboBox Name="matcombo" Grid.Column="1" Grid.Row="2"  Height="20"  DisplayMemberPath="Name" SelectedValuePath="Id" Width="170"  />
                <Label Grid.Row="3" Content="Thickness" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,0,2" Height="30" Width="90" Foreground="#FF6B7373"/>
                <TextBox Name="thicktxt" Grid.Column="1" Grid.Row="3" Margin="12,9,68,8" Height="20" TextAlignment="Center" FontSize="11" FontStretch="Normal" FontWeight="DemiBold"  />
                <CheckBox Content="Offset From Faces" Grid.Column="0" Grid.Row="4"  VerticalAlignment="Top" Height="20" FontSize="11" FontWeight="Bold" Foreground="#FF6B7373" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="10,4,165,0" Grid.ColumnSpan="2"/>
                <Label Grid.Column="0" Grid.Row="4" FontSize="11" FontWeight="Bold" VerticalAlignment="Top" Foreground="Gray" HorizontalAlignment="Right" Margin="0,23,0,0" Grid.RowSpan="2" >Value</Label>
                <TextBox Name="offsettxt" Grid.Column="1" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center"  Width="114" Height="20"  IsEnabled="False"  FontSize="18" FontStretch="Normal" FontWeight="DemiBold" Margin="0,26,0,0" Grid.RowSpan="2"/>
                <Label  Name="levellbl" Content="Level" Grid.Row="0" Grid.Column="0" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,0,2" Height="30" Width="90" Foreground="#FF6B7373" ></Label>
                <ComboBox Name="levelcombo" Grid.Row="0" Grid.Column="1" Height="20" IsEnabled="False"  DisplayMemberPath="Name" SelectedValuePath="Id" Width="170" ></ComboBox>
                <Label Content="mm" FontWeight="Bold" FontSize="11" Margin="128,7,35,0" Grid.Row="3" Grid.Column="1" Foreground="#FF6B7373"/>
                <Label Content="mm" FontWeight="Bold" FontSize="11" Margin="153,23,10,26" Grid.Row="4" Grid.Column="1" Grid.RowSpan="2" Foreground="#FF6B7373"/>
            </Grid>
            <Grid   VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Apply" Grid.Column="1"  Width="80" Height="26" Background="#FFE6C982" FontSize="15" Click="Button_Click" FontFamily="Segoe UI Light" />
                <Button Content="ok"  Grid.Column="0"  Height="26"  Width="78" Background="#FFE6C982" FontSize="15" Click="Button_Click_1" FontFamily="Segoe UI Light"/>
            </Grid>

        </StackPanel>

    </Grid>
</Window>
